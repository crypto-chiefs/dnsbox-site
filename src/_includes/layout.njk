<!DOCTYPE html>
<html lang="{{ lang }}" dir="ltr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Language alternatives -->
    <link rel="alternate" hreflang="en" href="https://dnsbox.io" />
    <link rel="alternate" hreflang="ru" href="https://dnsbox.io/ru.html" />
    <link rel="alternate" hreflang="de" href="https://dnsbox.io/de.html" />
    <link rel="alternate" hreflang="es" href="https://dnsbox.io/es.html" />
    <link rel="alternate" hreflang="fr" href="https://dnsbox.io/fr.html" />
    <link rel="alternate" hreflang="hi" href="https://dnsbox.io/hi.html" />
    <link rel="alternate" hreflang="id" href="https://dnsbox.io/id.html" />
    <link rel="alternate" hreflang="ko" href="https://dnsbox.io/ko.html" />
    <link rel="alternate" hreflang="pt" href="https://dnsbox.io/pt.html" />
    <link rel="alternate" hreflang="tr" href="https://dnsbox.io/tr.html" />
    <link rel="alternate" hreflang="vi" href="https://dnsbox.io/vi.html" />
    <link rel="alternate" hreflang="zh" href="https://dnsbox.io/zh.html" />
    <link rel="alternate" hreflang="x-default" href="https://dnsbox.io" />

    <!-- Meta tags -->
    <meta name="description" content="{{ translations.layout.meta_description | safe }}" />
    <meta name="keywords" content="{{ translations.layout.meta_keywords | safe }}" />
    <meta name="author" content="DNSBox Team" />
    <meta name="language" content="{{ translations.layout.meta_language | safe }}" />

    <!-- Open Graph -->
    <meta property="og:title" content="{{ translations.layout.og_title | safe }}" />
    <meta property="og:description" content="{{ translations.layout.og_description | safe }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ translations.layout.og_url | safe }}" />
    <meta property="og:locale" content="{{ translations.layout.og_locale | safe }}" />
    <meta property="og:site_name" content="DNSBox.io" />
    <meta property="og:image" content="https://dnsbox.io/assets/share/{{ lang }}.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="{{ translations.layout.og_image_alt | safe }}" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@dnsbox_io" />
    <meta name="twitter:creator" content="@dnsbox_team" />
    <meta name="twitter:title" content="{{ translations.layout.twitter_title | safe }}" />
    <meta name="twitter:description" content="{{ translations.layout.twitter_description | safe }}" />
    <meta name="twitter:image" content="https://dnsbox.io/assets/share/{{ lang }}.png" />
    <meta name="twitter:image:alt" content="{{ translations.layout.og_image_alt | safe }}" />

    <!-- Extra -->
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="General" />
    <meta name="copyright" content="DNSBox Team" />
    <meta name="theme-color" content="#2563eb" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />
    <link rel="canonical" href="https://dnsbox.io{% if lang != 'en' %}/{{ lang }}.html{% endif %}" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="assets/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="assets/apple-touch-icon.png" />
    <link rel="manifest" href="assets/site.webmanifest" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <title>{{ translations.layout.page_title | safe }}</title>

    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
        {
            "url": "https://dnsbox.io{% if lang != 'en' %}/{{ lang }}.html{% endif %}",
            "@context": "https://schema.org",
            "@type": "SoftwareApplication",
            "name": "DNSBox",
            "applicationCategory": "DeveloperTool",
            "operatingSystem": "Any",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            },
            "description": "{{ translations.layout.schema_description }}",
            "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "4.8",
                "ratingCount": "156"
            },
            "author": {
                "@type": "Organization",
                "name": "DNSBox Team",
                "url": "https://dnsbox.io"
            }
        }
    </script>

    <link href="assets/styles.css" rel="stylesheet" />
</head>
